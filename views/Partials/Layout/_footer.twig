<div data-vc-full-width="true" data-vc-full-width-init="true" class="vc_row vc_row-fluid footer-content">
  <div class="wpb_column vc_column_container vc_col-sm-12">
    <div class="wpb_wrapper">
      <nav id="nav-footer" class="nav-footer" role="navigation">
        <ul class="horizontal-list">
        {% for item in menu.footer.get_items %}
          <li class="nav-item {{item.classes | join(' ')}}">
            <a class="nav-link" href="{{item.get_link}}">{{item.title}}</a>
            {% if item.get_children %}
              <ul class="nav nav-drop">
              {% for child in item.get_children %}
                <li class="nav-drop-item">
                  <a class="nav-link" href="{{child.get_link}}">{{child.title}}</a>
                </li>
              {% endfor %}
              </ul>
            {% endif %}
          </li>
        {% endfor %}
        </ul>
      </nav><!-- #nav -->
    </div>
  </div>
</div>
<div class="vc_row-full-width"></div>
